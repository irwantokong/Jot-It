<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/blue_grey_800</item>
        <item name="colorPrimaryDark">@color/blue_grey_800_dark</item>
        <item name="colorPrimaryVariant">@color/blue_grey_800_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/grey_600</item>
        <item name="colorSecondaryVariant">@color/grey_600_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/grey_300</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/blue_grey_800_light</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textColor">@color/grey_600_dark</item>
        <item name="android:textColorHint">@color/grey_600_light</item>
        <item name="android:editTextColor">@color/grey_600_dark</item>
        <item name="android:colorControlNormal">@color/grey_600_dark</item>
    </style>
</resources>